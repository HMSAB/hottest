{
	"description":
		"A serial port test that sends an undefined amount of bytes in bursts"
	,
	"parameters": {
		"serial_baudrates" : {
			"default": "2400 9600 115200",
			"description": "Space separated baud rate list."
		},
		"serial_bursts": {
			"default": "100 5000 300 5000 2000 5000",
			"description": "Space separated \"bytes pause(us)\" pairs."
		},
		"serial_port_mode" : {
			"default": "8N1",
			"description": "Serial port mode."
		},
		"serial_dut_dev": {
			"default": "/dev/ttyS0",
			"description": "Serial device on the DUT."
		},
		"serial_tester_dev": {
			"default": "/dev/ttyS0",
			"description": "Serial device on the HOST/tester."
		},
		"serial_lock_name": {
			"default": "",
			"description": "Resource lock tag for the serial port on the tester."
		}
	}
